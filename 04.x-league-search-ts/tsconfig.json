{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",

		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"lib": ["ESNext", "DOM"],

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"rootDir": "./src",
		"outDir": "./js",

		"moduleResolution": "node",

		"esModuleInterop": true
	},

	"include": ["./src"]
}
